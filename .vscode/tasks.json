{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "bun: start",
      "type": "shell",
      "command": "bun run start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "label": "bun: dev",
      "type": "shell",
      "command": "bun run dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "label": "bun: test",
      "type": "shell",
      "command": "bun run test:watch",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "bun: build",
      "type": "shell",
      "command": "bun run build",
      "problemMatcher": "$tsc"
    }
  ]
}
