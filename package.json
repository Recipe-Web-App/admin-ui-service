{
  "name": "admin-ui-service",
  "version": "0.1.0",
  "description": "Angular 20 admin dashboard for recipe management with SSR support",
  "keywords": [
    "angular",
    "admin",
    "dashboard",
    "recipe",
    "ssr",
    "primeng",
    "tailwindcss"
  ],
  "author": "Recipe Web App Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Recipe-Web-App/admin-ui-service.git"
  },
  "bugs": {
    "url": "https://github.com/Recipe-Web-App/admin-ui-service/issues"
  },
  "homepage": "https://github.com/Recipe-Web-App/admin-ui-service",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=11.0.0"
  },
  "scripts": {
    "ng": "ng",
    "dev": "ng serve --hmr",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:vitest": "vitest",
    "test:e2e": "playwright test",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "ng lint",
    "lint:check": "ng lint --fix=false",
    "lint:fix": "ng lint --fix",
    "format": "prettier --write src/**/*.{ts,html,css,scss}",
    "format:check": "prettier --check src/**/*.{ts,html,css,scss}",
    "build:check": "ng build --configuration development --output-path /tmp/build-check",
    "analyze": "ng build --stats-json && npx webpack-bundle-analyzer dist/stats.json",
    "serve:ssr:admin-ui-service": "node dist/admin-ui-service/server/server.mjs"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.13",
    "@angular/compiler": "^20.3.13",
    "@angular/core": "^20.3.13",
    "@angular/forms": "^20.3.13",
    "@angular/platform-browser": "^20.3.13",
    "@angular/platform-server": "^20.3.13",
    "@angular/router": "^20.3.13",
    "@angular/ssr": "^20.3.11",
    "@primeng/themes": "^20.3.0",
    "@tanstack/angular-query-experimental": "^5.90.13",
    "angular-oauth2-oidc": "^20.0.2",
    "express": "^5.1.0",
    "http-status-codes": "^2.3.0",
    "jose": "^6.1.2",
    "lucide-angular": "^0.554.0",
    "primeicons": "^7.0.0",
    "primeng": "^20.3.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.13",
    "zone.js": "~0.16.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.11",
    "@angular/cli": "^20.3.11",
    "@angular/compiler-cli": "^20.3.13",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/typography": "^0.5.19",
    "@types/express": "^5.0.5",
    "@types/jasmine": "~5.1.13",
    "@types/node": "^24.10.1",
    "@vitest/ui": "^3.2.4",
    "angular-eslint": "21.0.1",
    "autoprefixer": "^10.4.22",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jasmine-core": "~5.12.1",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "license-checker": "^25.0.1",
    "madge": "^8.0.0",
    "markdownlint-cli": "^0.46.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "stylelint": "^16.26.0",
    "stylelint-config-standard": "^39.0.1",
    "tailwindcss": "^4.1.16",
    "typescript": "~5.9.3",
    "typescript-eslint": "8.48.0",
    "vitest": "^3.2.4"
  }
}
