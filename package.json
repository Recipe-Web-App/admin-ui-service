{
  "name": "admin-ui-service",
  "version": "0.1.0",
  "description": "Angular 21 admin dashboard for recipe management with SSR support",
  "keywords": [
    "angular",
    "admin",
    "dashboard",
    "recipe",
    "ssr",
    "primeng",
    "tailwindcss"
  ],
  "author": "Recipe Web App Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Recipe-Web-App/admin-ui-service.git"
  },
  "bugs": {
    "url": "https://github.com/Recipe-Web-App/admin-ui-service/issues"
  },
  "homepage": "https://github.com/Recipe-Web-App/admin-ui-service",
  "engines": {
    "node": ">=20.20.0",
    "bun": ">=1.1.0"
  },
  "scripts": {
    "ng": "ng",
    "dev": "ng serve --hmr",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "ng lint",
    "lint:check": "ng lint --fix=false",
    "lint:fix": "ng lint --fix",
    "format": "prettier --write src/**/*.{ts,html,css,scss}",
    "format:check": "prettier --check src/**/*.{ts,html,css,scss}",
    "build:check": "ng build --configuration development --output-path /tmp/build-check",
    "analyze": "ng build --stats-json && bunx webpack-bundle-analyzer dist/stats.json",
    "serve:ssr:admin-ui-service": "bun dist/admin-ui-service/server/server.mjs",
    "openapi:lint": "redocly lint docs/api/openapi.yaml",
    "openapi:validate": "redocly lint docs/api/openapi.yaml --skip-rule=no-unused-components",
    "openapi:preview": "redocly preview-docs docs/api/openapi.yaml"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^21.1.1",
    "@angular/compiler": "^21.1.1",
    "@angular/core": "^21.1.1",
    "@angular/forms": "^21.1.1",
    "@angular/platform-browser": "^21.1.1",
    "@angular/platform-server": "^21.1.1",
    "@angular/router": "^21.1.1",
    "@angular/ssr": "^21.1.1",
    "@primeng/themes": "21.0.2",
    "@tanstack/angular-query-experimental": "^5.90.24",
    "angular-oauth2-oidc": "^20.0.2",
    "express": "^5.2.1",
    "http-status-codes": "^2.3.0",
    "jose": "^6.1.3",
    "lucide-angular": "^0.563.0",
    "primeicons": "^7.0.0",
    "primeng": "21.0.2",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "uuid": "^13.0.0",
    "zod": "^4.3.6",
    "zone.js": "~0.16.0"
  },
  "devDependencies": {
    "@redocly/cli": "^2.15.0",
    "@analogjs/vite-plugin-angular": "^2.2.0",
    "@analogjs/vitest-angular": "^2.2.0",
    "@angular/build": "^21.1.1",
    "@angular/cli": "^21.1.1",
    "@angular/compiler-cli": "^21.1.1",
    "@angular/platform-browser-dynamic": "^21.1.1",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@playwright/test": "^1.58.0",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@types/bun": "^1.3.7",
    "@types/express": "^5.0.6",
    "@types/node": "^24.10.9",
    "@vitest/ui": "^4.0.18",
    "angular-eslint": "21.1.0",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jsdom": "^27.4.0",
    "license-checker": "^25.0.1",
    "madge": "^8.0.0",
    "markdownlint-cli": "^0.47.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "stylelint": "^17.0.0",
    "stylelint-config-standard": "^40.0.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "8.54.0",
    "vitest": "^4.0.18"
  }
}
